<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	
	<!--
	Qc media note:
	Extbase can automatically override the typoscript values with the values defined in this flexform.
	For this to work, the flexforms fields must be called the same name as the TS field
	Ex: If the TS field is "plugin.tx_vibeo.settings.player.playerWidth", the flexform field will be "settings.player.playerWidth"
	
	When this is done, extbase automatically overrides the TS value with the flexform value if it is set, and merges everything in the "$this->settings" variable in the controller.
	
	-->
	
<sheets>
	<sDEF>
		<ROOT>
			<TCEforms>
				<sheetTitle>LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeomedialist.media</sheetTitle>
			</TCEforms>
			<type>array</type>
			<el>
				<settings.media.files>
					<TCEforms>
						<label>LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeosinglemedia.files</label>
						<config>
							<type>group</type>
							<internal_type>file</internal_type>
							<uploadfolder>uploads/tx_vibeo</uploadfolder>
							<allowed>MP4, WEBM, OGG, MPEG, M4V, OGV, MOV, RTMP, AAC, MP1, MP2, MP3, MPG, M4A, OGA, WAV, FLV, WMV</allowed>
							<disallowed>php</disallowed>
							<size>5</size>
                            				<maxitems>1</maxitems>
						</config>
					</TCEforms>
				</settings.media.files>
				
				<settings.media.url>
					<TCEforms>
						<label>LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeosinglemedia.url</label>
						<config>
							<type>input</type>
							<size>30</size>
							<eval>trim</eval>
						</config>
					</TCEforms>
				</settings.media.url>
				
				<settings.media.description>
					<TCEforms>
						<label>LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeosinglemedia.description</label>
						<config>
							<type>text</type>
							<cols>40</cols>
							<rows>15</rows>
							<eval>trim</eval>
						</config>
						<defaultExtras>richtext[]</defaultExtras>
					</TCEforms>
				</settings.media.description>
				
				<settings.media.image>
					<TCEforms>
						<label>LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeosinglemedia.image</label>
						<config>
							<type>group</type>
							<internal_type>file</internal_type>
							<uploadfolder>uploads/tx_vibeo</uploadfolder>
							<allowed>JPG,JPEG,PNG,BMP,GIF</allowed>
							<show_thumbs>php</show_thumbs>
							<size>1</size>
							<maxitems>1</maxitems>
							<minitems>0</minitems>
						</config>
					</TCEforms>
				</settings.media.image>
				
				<settings.media.track>
					<TCEforms>
						<label>LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeosinglemedia.track</label>
						<config>
							<type>group</type>
							<internal_type>file</internal_type>
							<uploadfolder>uploads/tx_vibeo</uploadfolder>
							<allowed>VTT, TTML, SRT, TXT, CSV, XML</allowed>
							<disallowed>php</disallowed>
							<size>1</size>
							<maxitems>1</maxitems>
							<minitems>0</minitems>
						</config>
					</TCEforms>
				</settings.media.track>

			</el>
		</ROOT>
	</sDEF>
	<s_appearance>
		<ROOT>
			<TCEforms>
				<sheetTitle>LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeomedialist.playerappearance</sheetTitle>
			</TCEforms>
			<type>array</type>
			<el>
				<settings.player.videoWidth>
					<TCEforms>
						<label>
							LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeomedialist.player.videoWidth
						</label>
						<config>
							<type>input</type>
							<size>12</size>
							<max>20</max>
							<eval>num</eval>
							<default>640</default>
							<checkbox/>
						</config>
					</TCEforms>
				</settings.player.videoWidth>
				<settings.player.videoHeight>
					<TCEforms>
						<label>
							LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeomedialist.player.videoHeight
						</label>
						<config>
							<type>input</type>
							<size>12</size>
							<max>20</max>
							<eval>num</eval>
							<default>360</default>
							<checkbox/>
						</config>
					</TCEforms>
				</settings.player.videoHeight>
				<settings.player.audioWidth>
					<TCEforms>
						<label>
							LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeomedialist.player.audioWidth
						</label>
						<config>
							<type>input</type>
							<size>12</size>
							<max>20</max>
							<eval>num</eval>
							<default>400</default>
							<checkbox/>
						</config>
					</TCEforms>
				</settings.player.audioWidth>
				<settings.player.audioHeight>
					<TCEforms>
						<label>
							LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeomedialist.player.audioHeight
						</label>
						<config>
							<type>input</type>
							<size>12</size>
							<max>20</max>
							<eval>num</eval>
							<default>30</default>
							<checkbox/>
						</config>
					</TCEforms>
				</settings.player.audioHeight>
				<settings.player.enableAutosize>
					<TCEforms>
						<label>
							LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeomedialist.player.enableAutosize
						</label>
						<config>
							<type>check</type>
							<default>1</default>
						</config>
					</TCEforms>
				</settings.player.enableAutosize>
				<settings.player.alwaysShowControls>
					<TCEforms>
						<label>
							LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeomedialist.player.alwaysShowControls
						</label>
						<config>
							<type>check</type>
							<default>1</default>
						</config>
					</TCEforms>
				</settings.player.alwaysShowControls>
				<settings.player.overlayControls>
					<TCEforms>
						<label>
							LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeomedialist.player.overlayControls
						</label>
						<config>
							<type>check</type>
						</config>
					</TCEforms>
				</settings.player.overlayControls>
				<settings.player.showCaptionPopup>
					<TCEforms>
						<label>
							LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeomedialist.player.showCaptionPopup
						</label>
						<config>
							<type>check</type>
						</config>
					</TCEforms>
				</settings.player.showCaptionPopup>
				<settings.player.videoVolume>
					<TCEforms>
						<label>
							LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeomedialist.player.videoVolume
						</label>
						<config>
							<type>select</type>
							<items type="array">
								<numIndex index="0" type="array">
									<numIndex index="0">LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeomedialist.player.videoVolume.horizontal</numIndex>
									<numIndex index="1">horizontal</numIndex>
								</numIndex>
								<numIndex index="1" type="array">
									<numIndex index="0">LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeomedialist.player.videoVolume.vertical</numIndex>
									<numIndex index="1">vertical</numIndex>
								</numIndex>
							</items>
							<maxitems>1</maxitems>
							<size>1</size>
						</config>
					</TCEforms>
				</settings.player.videoVolume>
				<settings.player.features>
					<TCEforms>
						<label>
							LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeomedialist.player.features
						</label>
						<config>
							<type>input</type>
							<size>35</size>
							<max>1000</max>
							<!--<eval>num</eval>-->
							<default>['playpause','current','progress','duration','tracks','volume','fullscreen']</default>
							<checkbox/>
						</config>
					</TCEforms>
				</settings.player.features>
				<settings.player.alwaysShowHours>
					<TCEforms>
						<label>
							LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeomedialist.player.alwaysShowHours
						</label>
						<config>
							<type>check</type>
						</config>
					</TCEforms>
				</settings.player.alwaysShowHours>
				<settings.player.showTimecodeFrameCount>
					<TCEforms>
						<label>
							LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeomedialist.player.showTimecodeFrameCount
						</label>
						<config>
							<type>check</type>
						</config>
					</TCEforms>
				</settings.player.showTimecodeFrameCount>
				<settings.player.framesPerSecond>
					<TCEforms>
						<label>
							LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeomedialist.player.framesPerSecond
						</label>
						<config>
							<type>input</type>
							<size>12</size>
							<max>20</max>
							<eval>num</eval>
							<default>25</default>
							<checkbox/>
						</config>
					</TCEforms>
				</settings.player.framesPerSecond>
			</el>	
		</ROOT>
	</s_appearance>
	<s_behaviour>
		<ROOT>
			<TCEforms>
				<sheetTitle>LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeomedialist.playerbehaviour</sheetTitle>
			</TCEforms>
			<type>array</type>
			<el>
				<settings.player.startVolume>
					<TCEforms>
						<label>
							LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeomedialist.player.startVolume
						</label>
						<config>
							<type>input</type>
							<size>12</size>
							<max>3</max>
							<eval>int</eval>
							<default>80</default>
							<checkbox/>
						</config>
					</TCEforms>
				</settings.player.startVolume>
				<settings.player.loop>
					<TCEforms>
						<label>
							LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeomedialist.player.loop
						</label>
						<config>
							<type>check</type>
						</config>
					</TCEforms>
				</settings.player.loop>
				<settings.player.iPadUseNativeControls>
					<TCEforms>
						<label>
							LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeomedialist.player.iPadUseNativeControls
						</label>
						<config>
							<type>check</type>
						</config>
					</TCEforms>
				</settings.player.iPadUseNativeControls>
				<settings.player.iPhoneUseNativeControls>
					<TCEforms>
						<label>
							LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeomedialist.player.iPhoneUseNativeControls
						</label>
						<config>
							<type>check</type>
						</config>
					</TCEforms>
				</settings.player.iPhoneUseNativeControls>
				<settings.player.AndroidUseNativeControls>
					<TCEforms>
						<label>
							LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeomedialist.player.AndroidUseNativeControls
						</label>
						<config>
							<type>check</type>
						</config>
					</TCEforms>
				</settings.player.AndroidUseNativeControls>
				<settings.player.enableKeyboard>
					<TCEforms>
						<label>
							LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeomedialist.player.enableKeyboard
						</label>
						<config>
							<type>check</type>
							<default>1</default>
						</config>
					</TCEforms>
				</settings.player.enableKeyboard>
				<settings.player.pauseOtherPlayers>
					<TCEforms>
						<label>
							LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeomedialist.player.pauseOtherPlayers
						</label>
						<config>
							<type>check</type>
							<default>1</default>
						</config>
					</TCEforms>
				</settings.player.pauseOtherPlayers>
				<settings.player.keyActions>
					<TCEforms>
						<label>
							LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeomedialist.player.keyActions
						</label>
						<config>
							<type>input</type>
							<size>35</size>
							<max>1000</max>
							<!--<eval>num</eval>-->
							<default>[]</default>
							<checkbox/>
						</config>
					</TCEforms>
				</settings.player.keyActions>
		
			</el>
		</ROOT>
	</s_behaviour>
	<s_listing>
		<ROOT>
			<TCEforms>
				<sheetTitle>LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeomedialist.listing</sheetTitle>
			</TCEforms>
			<type>array</type>
			<el>
				<settings.list.startWithThumbnails>
					<TCEforms>
						<label>
							LLL:EXT:vibeo/Resources/Private/Language/locallang_flexforms.xml:vibeomedialist.list.startWithThumbnails
						</label>
						<config>
							<type>check</type>
							<default>1</default>
						</config>
					</TCEforms>
				</settings.list.startWithThumbnails>
			</el>
		</ROOT>
	</s_listing>
</sheets>
</T3DataStructure>
